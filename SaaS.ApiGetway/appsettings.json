{
  "ReverseProxy": {
    "Routes": {
      "auth": {
        "ClusterId": "authCluster",
        "Match": {
          "Path": "/auth/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/auth" },
          { "PathPrefix": "/api/auth" }
        ]
      },
      "apikey": {
        "ClusterId": "authCluster",
        "Match": {
          "Path": "/ApiKey/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/ApiKey" },
          { "PathPrefix": "/api/ApiKey" }
        ]
      },
      "dashboard": {
        "ClusterId": "authCluster",
        "Match": {
          "Path": "/Dashboard/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/Dashboard" },
          { "PathPrefix": "/api/Dashboard" }
        ]
      },
      "session": {
        "ClusterId": "sessionCluster",
        "Match": {
          "Path": "/session/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/session" },
          { "PathPrefix": "/api/Session" }
        ]
      },
      "analytics": {
        "ClusterId": "analyticsCluster",
        "Match": {
          "Path": "/analytics/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/analytics" },
          { "PathPrefix": "/api/analytics" }
        ]
      }
    },
    "Clusters": {
      "authCluster": {
        "Destinations": {
          "authService": {
             // "Address": "http://localhost:5001/" 
            "Address": "http://auth-service:8080/"
          }
        }
      },
      "sessionCluster": {
        "Destinations": {
          "sessionService": {
            // "Address": "http://localhost:5002/"
            "Address": "http://session-service:5002/"
          }
        }
      },
      "analyticsCluster": {
        "Destinations": {
          "analyticsService": {
             //"Address": "http://localhost:5003/"
            "Address": "http://analytics-service:8080/"
          }
        }
      }
    }
  }
}
